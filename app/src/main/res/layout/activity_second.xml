<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

            <ImageView
                    android:id="@+id/ImageHeader"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/peaky_blinders"
                    app:layout_constraintDimensionRatio="16:9"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" android:layout_marginTop="4dp"/>

    <TextView
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PEAKY BLINDERS"
            android:background="#F80A0A0A"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/ImageView"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toBottomOf="@+id/ImageHeader"/>

    <TextView
            android:id="@+id/TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description about the movie"
            android:textSize="20sp"
            android:textStyle="italic"

            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/movieTitle" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>

    <TextView
            android:id="@+id/longMovieDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Long description about the movie"
            android:textSize="16sp"
            android:textStyle="italic"
            android:paddingLeft="4dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

